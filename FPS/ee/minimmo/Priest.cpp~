Warrior Garen("Garen");
Mage Lux("Lux");
Priest Soraka("Soraka");

Priest::Priest(std::string name)
{
  m_name = name;
  m_vie = 340;
  m_mana = 200;
  m_degatsArme = 200;
  nbDegats = 200;
  m_intel = 200;
}

void Priest::Presentation() const
{
  std::cout << "Tu es maintenant un pretre, puisses-tu guider ton armée vers la piété.\n";
}




